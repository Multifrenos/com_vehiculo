<?xml version="1.0" encoding="utf-8"?>
<form>
        <fieldset>
                <field
                        name="id"
                        type="hidden"
                />
                <field 
                        name="virtuemart_product_id" 
                        type="productos" 
                        label="COM_VEHICULO_CRUCE_PRODUCTO_LABEL"   
                        class="chzn-select input-xxlarge"                        
                        required="true">
                        <option value="">COM_VEHICULO_SELECT_PRODUCT_LABEL</option>
                </field>
                
                <field 
                        name="recambio_id" 
                        type="text"
                        class="input-small" 
                        label="COM_VEHICULO_CRUCE_VIRTUEMART_RECAMBIO_ID_LABEL"   
                />                                        
                
                <field 
                        name="idMarca" 
                        type="marca" 
                        label="COM_VEHICULO_VERSION_MARCA_LABEL"   
                        class="chzn-select"
                        onchange="Vehiculo.updateSelect(this, 'jform_idModelo', 'nodelos');"
                        required="true">
                        <option value="">COM_VEHICULO_SELECT_MARCA_LABEL</option>
                </field>
                <field 
                        name="idModelo" 
                        type="modelo" 
                        label="COM_VEHICULO_VERSION_MODELO_LABEL"   
                        class="chzn-select"
                        onchange="Vehiculo.updateSelect(this, 'jform_version_vehiculo_id', 'versions');"
                        required="true">
                        <option value="">COM_VEHICULO_SELECT_MODELO_LABEL</option>
                </field> 
                
                <field
                        name="version_vehiculo_id"
                        type="version" 
                        default="" 
                        label="COM_VEHICULO_CRUCE_VIRTUEMART_IDVERSION_VEHICULO_LABEL"
                        class="chzn-select"
                        required="true">
                        <option value="">COM_VEHICULO_SELECT_VERSION_LABEL</option>
                </field> 
                              
                <field
                        name="fecha_actualizacion"
                        type="text"
                        label="COM_VEHICULO_CRUCE_VIRTUEMART_FECHAACTUALIZACION_LABEL"
                        description="COM_VEHICULO_CRUCE_VIRTUEMART_FECHAACTUALIZACION_DESC"
                        class="input-small"                        
                        readonly="true"
                        default=""
                />
                
        </fieldset>
</form>
