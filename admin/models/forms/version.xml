<?xml version="1.0" encoding="utf-8"?>
<form>
        <fieldset>
                <field
                        name="id"
                        type="hidden"
                />
                
                <field 
                        name="idMarca" 
                        type="marca" 
                        label="COM_VEHICULO_VERSION_MARCA_LABEL"   
                        class="chzn-select"
                        onchange="Vehiculo.updateSelect(this, 'jform_idModelo', 'nodelos');"
                        required="true">
                        <option value="">COM_VEHICULO_SELECT_MARCA_LABEL</option>
                </field>
              
                <field 
                        name="idModelo" 
                        type="modelo" 
                        label="COM_VEHICULO_VERSION_MODELO_LABEL"   
                        class="chzn-select"
                        required="true">
                        <option value="">COM_VEHICULO_SELECT_MODELO_LABEL</option>
                </field>                  
                
                <field
                        name="nombre"
                        type="text"
                        label="COM_VEHICULO_VERSION_NOMBRE_LABEL"
                        description="COM_VEHICULO_VERSION_NOMBRE_DESC"
                        size="40"
                        class="inputbox"
                        default=""
                        required="true"
                />
                <field                        
                        name="idTipo" 
                        type="sql" 
                        default="" 
                        description="COM_VEHICULO_VERSION_IDTIPO_DESC"
                        label="COM_VEHICULO_VERSION_IDTIPO_LABEL" 
                        query="SELECT * FROM #__vehiculo_tipos" 
                        key_field="id" 
                        value_field="nombre"
                        class="chzn-select"
                        
                />
                <field                        
                        name="idCombustible" 
                        type="sql" 
                        default="" 
                        description="COM_VEHICULO_VERSION_IDCOMBUSTIBLE_DESC"
                        label="COM_VEHICULO_VERSION_IDCOMBUSTIBLE_LABEL" 
                        query="SELECT * FROM #__vehiculo_combustibles" 
                        key_field="id" 
                        value_field="nombre"
                        class="chzn-select"
                />
                <field
                        name="fecha_inicial"
                        type="calendar"
                        label="COM_VEHICULO_VERSION_FECHAINICIAL_LABEL"
                        description="COM_VEHICULO_VERSION_FECHAINICIAL_DESC"
                        class="input-small"
                        translateformat="true"
                        filter="user_utc"
                />
                  <field
                        name="fecha_final"
                        type="calendar"
                        label="COM_VEHICULO_VERSION_FECHAFINAL_LABEL"
                        description="COM_VEHICULO_VERSION_FECHAFINAL_DESC"
                        class="input-small"
                        translateformat="true"
                        filter="user_utc"
                />
                <field
                        name="kw"
                        type="text"
                        label="COM_VEHICULO_VERSION_KW_LABEL"
                        description="COM_VEHICULO_VERSION_KW_DESC"
                        size="10"
                        class="inputbox"
                        default=""
                />
                 <field
                        name="cv"
                        type="text"
                        label="COM_VEHICULO_VERSION_CV_LABEL"
                        description="COM_VEHICULO_VERSION_CV_DESC"
                        size="10"
                        class="inputbox"
                        default=""
                />
                <field
                        name="cm3"
                        type="text"
                        label="COM_VEHICULO_VERSION_CM3_LABEL"
                        description="COM_VEHICULO_VERSION_CM3_DESC"
                        size="10"
                        class="inputbox"
                        default=""
                />
                <field
                        name="ncilindros"
                        type="text"
                        label="COM_VEHICULO_VERSION_NCILINDROS_LABEL"
                        description="COM_VEHICULO_VERSION_NCILINDROS_DESC"
                        size="10"
                        class="inputbox"
                        default=""
                />
        </fieldset>
</form>
